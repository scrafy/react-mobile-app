{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "reflect-metadata",
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules"
  ],
  "file": [
    "src/**/*"
  ],
  "include": [
    "src",
    "pages/Incidence.tsx",
    "pages/Suppliers.tsx",
    ".pages/generalproductsearch.tsx",
    "pages/singin.tsx",
    "pages/recoverpassword.tsx",
    "pages/Home.tsx",
    "pages/HistoryOrders.tsx",
    "pages/confirmation.tsx",
    "pages/CheckOut.tsx",
    "pages/Centers.tsx",
    ".pages/breakdown.tsx",
    "pages/api", "src/presentation/translationsfiles", "src/presentation/helpers", "src/presentation/components"
  ]
}
